{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "name": "job"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true
    },
    "job_logo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "date": {
      "type": "string",
      "required": true
    },
    "responsibility": {
      "type": "component",
      "repeatable": false,
      "component": "responsibility.responsibility"
    }
  }
}
